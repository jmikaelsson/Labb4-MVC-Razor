<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Labb4_MVC_Razor.styles.css" asp-append-version="true" />
    <style>
        /* Anpassa navbarernas bakgrundsfärg och textens färg */
        .navbar-custom {
            background-color: rgb(170, 70, 75);
        }
            .navbar-custom .nav-link,
            .navbar-custom .navbar-brand,
            .navbar-custom .navbar-text {
                color: white !important;
            }

        /* Anpassa storleken på logotypen */
        .navbar-brand img {
            width: 200px; /* Justerat för att göra loggan större */
        }
        .navbar-brand{
            margin-right: 2rem;
            margin-top: none;
            padding: 2em;
            background-color: #fff;
            border-bottom-right-radius: 20px;
            border-bottom-left-radius: 20px;
        }
    </style>
</head>
<body>
    <header>
        <!-- Övre navbar: Logotyp och inloggning -->
        <nav class="navbar navbar-expand-sm navbar-custom">
            <div class="container-fluid d-flex justify-content-between">
                <!-- Logotyp till vänster -->

                <a class="navbar-brand" href="#">
                    <img src="~/images/logo.png" alt="Logo" />
                </a>
                <!-- Inloggning till höger -->
                <div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <!-- Undre navbar: Centrering av länkar -->
        <nav class="navbar navbar-expand-sm navbar-custom border-bottom box-shadow mb-3">
            <div class="container">
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Books" asp-action="Index">Böcker</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Labb4_MVC_Razor - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white;">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
